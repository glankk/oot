    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Everdrive (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "build/debug/zelda64.elf",
            "cwd": "${workspaceFolder}",
            "additionalSOLibSearchPath": "build/debug",
            "stopAtEntry": true,
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/mips64-ultra-elf-gdb",
            "miDebuggerServerAddress": "/dev/ttyUSB0",
            "setupCommands": [
                {
                    "description": "Set serial speed",
                    "text": "set serial baud 115200",
                    "ignoreFailures": false
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug with Everdrive (MSYS2)",
